<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="16dip"
    android:paddingBottom="16dip">
    <ImageView
        android:id="@+id/trailerPlayIcon"
        app:srcCompat="@drawable/ic_play_arrow_black_24px"
        android:contentDescription="@string/action_play_trailer"
        style="@style/actionIcons" />
    <ImageView
        android:id="@+id/trailerShareIcon"
        app:srcCompat="@drawable/ic_share_black_24px"
        android:contentDescription="@string/action_share_trailer"
        style="@style/actionIcons" />
    <TextView
        android:id="@+id/trailerName"
        android:textStyle="bold"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:paddingLeft="8dip"
        android:layout_weight="1"/>
</LinearLayout>